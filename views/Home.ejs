<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Page Singer</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <script src="main.js"></script>
</head>
<body>
         <h1 align="center">Ngọc Hiền Singer </h1>
         <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Image</th>
        <th>Link</th>
        <th>Modify</th>
      </tr>
    </thead>
    <tbody>
     <% singers.forEach( function(s,index) {%>
      <tr>
        <td><%= index+1%></td>
        <td><%= s.name%></td>
        <td><Image src="<%= s.image%>" alt="Not Found" width="50"></td>
        <td><a href="<%= s.link%>"> <%= s.name%></td>
        <td>
           <a href="/remove/<%= s.id%>">Remove</a>
           <br>
           <a href="/update/<%= s.id%>">Update</a>
        </td>
      </tr>
     <% }) %>

    </tbody>
  </table>
 <a href="add"><button type="button" class="btn btn-success">Add Singer</button></a>
</body>
</html>
<script src="reload/reload.js" ></script>